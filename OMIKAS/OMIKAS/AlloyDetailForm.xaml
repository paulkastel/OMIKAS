					<ColumnDefinition Width="80"/>
					<ColumnDefinition Width="30"/>
					<ColumnDefinition Width="80"/>
					<ColumnDefinition Width="30"/>
					<ColumnDefinition Width="80"/>
				</Grid.ColumnDefinitions>
				<Label Text="CENA:" Style="{StaticResource Styl_lbl1}" HorizontalTextAlignment="Center" HorizontalOptions="Center" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2"></Label>
				<Label x:Name="lblPrice" Style="{StaticResource Styl_lbl2}" HorizontalTextAlignment="Center" HorizontalOptions="Center"  Grid.Column="2" Grid.Row="0" Grid.ColumnSpan="2"></Label>

				<Label Text="Zawartości procentowe pierwiastków w stopie" Style="{StaticResource Styl_lbl1}" HorizontalTextAlignment="Center" HorizontalOptions="Center" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="6"></Label>

